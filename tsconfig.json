{
  "compilerOptions": {
    "module": "ESNext",
    "target": "esnext",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noUnusedParameters": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "example", "dist"]
}
